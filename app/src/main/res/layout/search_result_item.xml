<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_search_result_container"
                android:layout_width="match_parent"
                android:layout_height="120dp">

    <ImageView
            android:id="@+id/iv_search_result_item_thumb_img"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="155dp" android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/bt_category3"/>

    <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_search_result_item_thumb_img" android:orientation="vertical">
        <TextView

                android:id="@+id/tv_search_result_act_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:text="충북 보은 마을재생 프로젝트"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/c"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1sp"
                android:text="#충북 #미대 #시각디자인 #현대미술 #금손"
                android:textColor="#212121"
                android:textSize="7sp"/>

        <ImageView
                android:id="@+id/iv_search_result_item_bookmark"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/bookmark_selector"/>

    </LinearLayout>

    <View
            android:layout_alignParentBottom="true"
            android:background="#4e4e4e"
            android:layout_width="match_parent" android:layout_height="1dp"/>

</RelativeLayout>