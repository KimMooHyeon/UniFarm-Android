<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SignUp1Activity">
    <FrameLayout
        android:id="@+id/iv_signup1_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="19dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="12dp"
            android:src="@drawable/bt_back"
            />
    </FrameLayout>

    <TextView
            android:includeFontPadding="false"
            android:fontFamily="@font/oftb"
        android:id="@+id/tv_signup_text"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:textColor="#333333"
        android:lineSpacingExtra="3sp"
        android:gravity="center_horizontal"
        android:text="회원가입"
        />
    <FrameLayout
            android:visibility="invisible"
        android:id="@+id/iv_signup1_next"
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_height="30dp">
        <ImageView

            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/bt_next"
            />
    </FrameLayout>

<LinearLayout
    android:id="@+id/ll_signup1_bar"
    android:layout_marginTop="25dp"
    android:layout_below="@+id/tv_signup_text"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="5dp">
    <View
        android:background="#bfd867"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
    <View
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#f9fafc"
            android:includeFontPadding="false"
            android:fontFamily="@font/otfr"
        android:layout_below="@+id/ll_signup1_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:id="@+id/tv_signup1_school"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text="학교 입력"
            />
<FrameLayout
    android:id="@+id/fl_signup1_fl"
    android:background="#ffffff"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tv_signup1_school"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <EditText
        android:id="@+id/edt_signup1_school"
        android:paddingLeft="7dp"
        android:background="@null"
        android:hint="농협대학교"
            android:includeFontPadding="false"
            android:fontFamily="@font/oftb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/iv_signup1_search"
        android:layout_width="40dp"
        android:layout_gravity="right"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/bt_universitysearch"/>
    </FrameLayout>

</FrameLayout>
        <TextView
                android:includeFontPadding="false"
                android:fontFamily="@font/oftb"
            android:layout_below="@+id/fl_signup1_fl"
            android:id="@+id/tv_signup1_logInInfo"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text="로그인 정보입력"
            />
        <LinearLayout
            android:id="@+id/ll_login_info"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_signup1_logInInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
            android:id="@+id/tv_signup1_email"
        android:layout_marginLeft="7dp"
        android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/oftb"
        android:textColor="#969696"
        android:lineSpacingExtra="4sp"
        android:text="이메일"
        />
        <TextView
                android:elevation="2dp"
                android:padding="8dp"
                android:id="@+id/tv_signup_overlap"
                android:layout_marginRight="8dp"
                android:layout_centerInParent="true"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/boreder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"/>
    <EditText
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/tv_signup1_email"
            android:id="@+id/edt_signup1_id"
        android:paddingLeft="6dp"
        android:background="@null"
            android:textSize="11dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/oftb"
                    android:textColor="#969696"
                    android:lineSpacingExtra="4sp"
                    android:text="비밀번호"
                    />
                <EditText
                    android:id="@+id/edt_signup1_pw"
                    android:paddingLeft="10dp"
                    android:background="@null"
                        android:textSize="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#969696"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/oftb"
                    android:lineSpacingExtra="4sp"
                    android:text="비밀번호 확인"
                    />
                <EditText
                    android:id="@+id/edt_signup1_repw"
                    android:paddingLeft="10dp"
                    android:background="@null"
                        android:textSize="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_below="@+id/ll_login_info"
            android:id="@+id/tv_signup1_schoolInfo"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/oftb"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text="학적 입력"
            />
        <LinearLayout
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_signup1_schoolInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/oftb"
                    android:textColor="#969696"
                    android:lineSpacingExtra="4sp"
                    android:text="이름"
                    />
                <EditText
                    android:id="@+id/edt_signup1_name"
                    android:paddingLeft="10dp"
                    android:background="@null"
                        android:textSize="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/oftb"
                    android:textColor="#969696"
                    android:lineSpacingExtra="4sp"
                    android:text="입학년도(학번)"
                    />
                <EditText
                    android:id="@+id/edt_signup1_entranceYear"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_unifarm_characters"
            />
</RelativeLayout>