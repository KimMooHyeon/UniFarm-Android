<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/rl_rv_collect_allview"
        android:layout_height="match_parent"
        tools:context=".CollectViewActivity">
    <TextView
            android:id="@+id/tv_collect_view_text"
            android:includeFontPadding="false"
            android:fontFamily="@font/otfeb"
            android:layout_marginTop="17dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333333"
            android:lineSpacingExtra="3sp"
            android:gravity="center_horizontal"
            android:text="유니팜 모아보기"
            />

    <ImageView
        android:id="@+id/iv_collect_view_home"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/bt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<ImageView
    android:id="@+id/iv_collect_search"
    android:layout_marginRight="27dp"
    android:layout_marginTop="20dp"
    android:layout_alignParentRight="true"
    android:src="@drawable/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/collect_view_line"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/tv_collect_view_text"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/line_gradation"
            />
    <TextView
            android:id="@+id/tv_collect_popular_text"
            android:fontFamily="@font/oftb"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/collect_view_line"
            android:lineSpacingExtra="2sp"
            android:text="9월 첫째주 | 인기 프로그램"
            />
<android.support.v7.widget.RecyclerView
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_collect_popular_text"
        android:id="@+id/rv_collect_pupular"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        />
    <View
            android:id="@+id/v_collect_view_line"
            android:layout_below="@+id/rv_collect_pupular"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <TextView
            android:id="@+id/tv_collect_view_username"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/v_collect_view_line"
            android:includeFontPadding="false"
            android:fontFamily="@font/oftb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text="User"
            />
    <TextView
            android:id="@+id/tv_collect_recommend"
            android:layout_toRightOf="@+id/tv_collect_view_username"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/v_collect_view_line"
            android:includeFontPadding="false"
            android:fontFamily="@font/oftb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text=" 님에게 추천합니다"
            />
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_collect_major_standard"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:background="#000000"
            android:layout_width="8dp"
            android:layout_below="@+id/v_collect_view_line"
            android:layout_toRightOf="@+id/tv_collect_recommend"
            android:layout_height="8dp"/>
    <TextView
            android:id="@+id/tv_collect_major_standard"
            android:fontFamily="@font/oftb"
            android:layout_below="@+id/v_collect_view_line"
            android:layout_toRightOf="@+id/cv_collect_major_standard"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:textColor="#333333"
            android:lineSpacingExtra="2sp"
            android:text="전공기준"
            />
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_collect_interestingKeword_standard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:background="#000000"
            android:layout_width="8dp"
            android:visibility="invisible"
            android:layout_below="@+id/v_collect_view_line"
            android:layout_toRightOf="@+id/tv_collect_major_standard"
            android:layout_height="8dp"/>
    <TextView
            android:id="@+id/tv_collect_interestingKeword_standard"
            android:fontFamily="@font/oftb"
            android:layout_below="@+id/v_collect_view_line"
            android:layout_toRightOf="@+id/cv_collect_interestingKeword_standard"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:textColor="#cecece"
            android:lineSpacingExtra="2sp"
            android:text="관심키워드기준"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recommend_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_collect_recommend"
            android:layout_marginTop="25dp"
            app:layoutManager="android.support.v7.widget.StaggeredGridLayoutManager"
            app:spanCount="2" />
</RelativeLayout>