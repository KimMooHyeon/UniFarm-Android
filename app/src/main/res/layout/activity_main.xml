<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="end">

    <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#00FFFFFF"/>

            <ImageView android:layout_width="match_parent" android:layout_height="255dp"
                       android:background="@drawable/img_loginbackground"
                       android:scaleType="fitXY"/>

            <RelativeLayout
                    android:id="@+id/rl_main_act_profile_container"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/toolbar"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/iv_main_act_back"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/box_maintop"/>

                <ImageView
                        android:id="@+id/iv_main_act_profile"
                        android:layout_marginTop="28dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/profile"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_main_act_user"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/otfeb"
                    android:layout_below="@+id/iv_main_act_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_horizontal"
                    android:text="독고농협"/>
                <TextView
                        android:id="@+id/tv_main_act_usernim"
                        android:layout_toRightOf="@+id/tv_main_act_user"
                        android:layout_below="@+id/iv_main_act_profile"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/otfr"
                        android:text=" 님"/>
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_main_act_major"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_main_act_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/otfr"
                        android:textColor="#4e4e4e"
                        android:lineSpacingExtra="2sp"
                        android:gravity="center_horizontal"
                        android:text="컴퓨터학부 IT전공"/>
                <ImageView
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/tv_main_act_major"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/bt_myfarm"/>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/ll_main_act_my_info_container"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rl_main_act_profile_container"
                    android:layout_marginTop="-50dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/iv_main_act_btn_reward"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/bt_reward"/>
                    <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_horizontal"
                                android:text="리워드"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/otfeb"
                        />
                        <TextView
                                android:layout_marginTop="6dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/otfr"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#4e4e4e"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_horizontal"
                                android:text="more &gt;"
                        />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_main_act_comming_act"
                        android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/box_comingup"/>
                    <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:includeFontPadding="false"
                                android:fontFamily="@font/otfeb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_horizontal"
                                android:text="          D-12"
                                />
                        <TextView
                                android:layout_marginTop="6dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/otfr"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#4e4e4e"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_horizontal"
                                android:text="용면리 노인정 재건축 농활\n 2019.09.19"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_below="@+id/ll_main_act_my_info_container"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                <RelativeLayout
                        android:paddingVertical="20dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <RelativeLayout
                            android:id="@+id/rl_main_act_recommend"
                            android:paddingHorizontal="20dp"
                            android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/tv_main_act_recommend_user"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2sp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/oftb"
                                android:text="독고농협"/>
                        <TextView
                                android:layout_toRightOf="@+id/tv_main_act_recommend_user"
                                android:id="@+id/tv_main_act_recommend_ment"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2sp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/oftb"
                                android:text=" 님에게 추천해요"/>
                        <TextView
                                android:id="@+id/tv_main_act_more_btn"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/ofl"
                                android:padding="8dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#484848"
                                android:lineSpacingExtra="2sp"
                                android:gravity="end"
                                android:text="more &gt;"
                        />
                    </RelativeLayout>

                    <LinearLayout
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal"
                            android:layout_below="@+id/rl_main_act_recommend"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                        <RelativeLayout
                                android:id="@+id/rl_main_act_major_btn"
                                android:background="@drawable/box_major"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_marginTop="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/tv_main_act_sort"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#ffffff"
                                    android:lineSpacingExtra="1sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/oftb"
                                    android:gravity="center_horizontal"
                                    android:text="전공 매칭"/>

                            <TextView
                                    android:layout_marginTop="25dp"
                                    android:id="@+id/tv_main_act_title"
                                    android:layout_below="@+id/tv_main_act_sort"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#46b6df"
                                    android:lineSpacingExtra="1sp"
                                    android:gravity="center_horizontal"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/otfeb"
                                    android:text="고성 초등학교 코딩 교육"/>

                            <TextView
                                    android:layout_marginBottom="0dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:id="@+id/tv_main_act_title_hashtag"
                                    android:layout_below="@+id/tv_main_act_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="8sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/ofl"
                                    android:textColor="#212121"
                                    android:lineSpacingExtra="1sp"
                                    android:gravity="center_horizontal"
                                    android:text="#공대 #컴퓨터 #모바일 #스마트폰 #IT"/>

                        </RelativeLayout>

                        <View android:layout_width="1dp" android:layout_height="match_parent"
                              android:background="#8d8d8d"/>
                        <RelativeLayout
                                android:id="@+id/rl_main_act_keyword_btn"
                                android:background="@drawable/box_keyword_matching"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/tv_main_act_sort_1"
                                    android:layout_marginTop="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#ffffff"
                                    android:lineSpacingExtra="1sp"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/oftb"
                                    android:gravity="center_horizontal"
                                    android:text="관심 키워드 매칭"/>

                            <TextView
                                    android:layout_marginTop="25dp"
                                    android:id="@+id/tv_main_act_title_1"
                                    android:layout_below="@+id/tv_main_act_sort_1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#f26d6d"
                                    android:lineSpacingExtra="1sp"
                                    android:gravity="center_horizontal"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/otfeb"
                                    android:text="강원도 감자농사 체험"/>

                            <TextView
                                    android:layout_marginBottom="0dp"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/ofl"
                                    android:layout_marginTop="6dp"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_title_hashtag_1"
                                    android:layout_below="@+id/tv_main_act_title_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="8sp"
                                    android:textColor="#212121"
                                    android:lineSpacingExtra="1sp"
                                    android:gravity="center_horizontal"
                                    android:text="#자대 #농활 #농사체험 #강원도 #감자"/>


                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <View android:layout_width="match_parent" android:layout_height="10dp"
                      android:background="#f0f0f0"/>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                    <RelativeLayout
                            android:layout_marginTop="9dp"
                            android:id="@+id/rl_main_act_now_trend"
                            android:paddingHorizontal="20dp"
                            android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2sp"
                                android:fontFamily="@font/oftb"
                                android:includeFontPadding="false"
                                android:text="실시간 인기 프로그램"/>

                        <TextView
                                android:id="@+id/tv_main_act_real_time"
                                android:padding="8dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#484848"
                                android:lineSpacingExtra="2sp"
                                android:gravity="end"
                                android:text="15:00"
                        />

                    </RelativeLayout>

                    <LinearLayout
                            android:id="@+id/ll_main_act_now_rank"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/rl_main_act_now_trend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_nowtrend">

                        <TextView
                                android:id="@+id/tv_main_act_now_rank"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/oftb"
                                android:includeFontPadding="false"
                                android:textColor="#484848"
                                android:lineSpacingExtra="4sp"
                                android:text=""/>

                        <TextView
                                android:id="@+id/tv_main_act_now_title"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/otfeb"
                                android:includeFontPadding="false"
                                android:textColor="#696767"
                                android:ellipsize="marquee"
                                android:focusable="true"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:lineSpacingExtra="4sp"
                                android:text="1위 군산 마을 미화 봉사   2위 인천 문화마을 벽화 봉사    3위 고성 초등학교 코딩 교육   4위 강릉 감자 체험 봉사    5위 강화 섬마을 체험    6위 속초 갯벌 체험    7위 부산 광안리 오징어잡이 체험    8위 안산시 어린이집 봉사    9위 전국 걷기 장정 활동  10위 강촌 바다 체험 1위 군산 마을 미화 봉사   2위 인천 문화마을 벽화 봉사    3위 고성 초등학교 코딩 교육   4위 강릉 감자 체험 봉사    5위 강화 섬마을 체험    6위 속초 갯벌 체험    7위 부산 광안리 오징어잡이    8위 안산시 어린이집 봉사    9위 전국 걷기 장정   10위 강촌 바다 체험"       />
                    </LinearLayout>


                </RelativeLayout>


                <View android:layout_width="match_parent" android:layout_height="10dp"
                      android:background="#f0f0f0"/>

                <RelativeLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/tv_keyword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="2sp"
                            android:fontFamily="@font/oftb"
                            android:includeFontPadding="false"
                            android:text="오늘의 키워드"/>

                    <GridLayout
                            android:layout_margin="10dp"
                            android:columnCount="3"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_keyword"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:id="@+id/tv_main_act_keyword0"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#5G"/>
                        </RelativeLayout>

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_keyword1"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#코딩"/>
                        </RelativeLayout>

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_keyword2"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#강원도"/>
                        </RelativeLayout>

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_keyword3"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#단체"/>
                        </RelativeLayout>

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_keyword4"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#멘토"/>
                        </RelativeLayout>

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/keyword_selector">
                            <TextView
                                    android:fontFamily="@font/oftb"
                                    android:includeFontPadding="false"
                                    android:id="@+id/tv_main_act_keyword5"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#696767"
                                    android:lineSpacingExtra="4sp"
                                    android:text="#감"/>
                        </RelativeLayout>
                    </GridLayout>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer">

        <RelativeLayout
                android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/img_character"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RelativeLayout>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
